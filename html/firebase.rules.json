{
  "rules": {
    "users": {
      "$userId": {
        ".validate": "newData.hasChildren(['id', 'first_name', 'last_name', 'email', 'subscription_level'])",
        "id": {
          ".validate": "newData.isString()"
        },
        "first_name": {
          ".validate": "newData.isString()"
        },
        "last_name": {
          ".validate": "newData.isString()"
        },
        "email": {
          ".validate": "newData.isString()"
        },
        "subscription_level": {
          ".validate": "newData.isNumber()"
        },
        "tags": {
          ".validate": "newData.hasChildren()"
        },
        "leads": {
          ".validate": "newData.hasChildren()"
        },
        "sales_steps": {
          ".validate": "newData.hasChildren()"
        },
        "templates": {
          ".validate": "newData.hasChildren()"
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "leads": {
      "$userId": {
        ".validate": "newData.hasChildren(['id', 'first_name', 'last_name', 'email', 'company_name', 'phone_number', 'lead_source', 'facebook_profile', 'twitter_profile', 'linkedin_profile', 'lead_title', 'lead_rate', 'lead_description', 'id', 'first_name', 'last_name', 'email', 'company_name', 'phone_number', 'lead_source', ('facebook_profile'), ('twitter_profile'), ('linkedin_profile'), ('lead_title'), ('lead_rate'), ('lead_description')])",
        "id": {
          ".validate": "newData.isString() && newData.isString()"
        },
        "first_name": {
          ".validate": "newData.isString() && newData.isString()"
        },
        "last_name": {
          ".validate": "newData.isString() && newData.isString()"
        },
        "email": {
          ".validate": "newData.isString() && newData.isString()"
        },
        "company_name": {
          ".validate": "newData.isString() && newData.isString()"
        },
        "phone_number": {
          ".validate": "newData.isString() && newData.isString()"
        },
        "lead_source": {
          ".validate": "newData.isString() && newData.isString()"
        },
        "facebook_profile": {
          ".validate": "newData.isString() && newData.isString()"
        },
        "twitter_profile": {
          ".validate": "newData.isString() && newData.isString()"
        },
        "linkedin_profile": {
          ".validate": "newData.isString() && newData.isString()"
        },
        "lead_title": {
          ".validate": "newData.isString() && newData.isString()"
        },
        "lead_rate": {
          ".validate": "newData.isString() && newData.isString()"
        },
        "lead_description": {
          ".validate": "newData.isString() && newData.isString()"
        },
        "lead_tags": {
          ".validate": "newData.hasChildren()"
        },
        "leads_lists": {
          ".validate": "newData.hasChildren()"
        },
        "users": {
          ".validate": "newData.hasChildren()"
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "auth != null && auth.uid == $userId && (auth != null && auth.uid == $userId)"
      }
    },
    "leads_list": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        "$leadId": {
          ".validate": "newData.hasChildren(['name'])",
          "name": {
            ".validate": "newData.isString()"
          },
          "leads": {
            ".validate": "newData.hasChildren()"
          },
          "$other": {
            ".validate": "false"
          },
          ".read": "auth != null && auth.uid == $userId",
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "sales_steps": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        "$leadId": {
          ".validate": "newData.hasChildren(['steps', 'status'])",
          "steps": {
            ".validate": "newData.hasChildren()"
          },
          "status": {
            ".validate": "newData.isString()"
          },
          "$other": {
            ".validate": "false"
          },
          ".read": "auth != null && auth.uid == $userId",
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "templates": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        "$templateId": {
          ".validate": "newData.hasChildren(['title', 'subject', 'content'])",
          "title": {
            ".validate": "newData.isString()"
          },
          "subject": {
            ".validate": "newData.isString()"
          },
          "content": {
            ".validate": "newData.isString()"
          },
          "variables": {
            ".validate": "newData.hasChildren()"
          },
          "$other": {
            ".validate": "false"
          },
          ".read": "auth != null && auth.uid == $userId",
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    "premium_templates": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$templateId": {
        ".validate": "newData.hasChildren(['title', 'subject', 'content'])",
        "title": {
          ".validate": "newData.isString()"
        },
        "subject": {
          ".validate": "newData.isString()"
        },
        "content": {
          ".validate": "newData.isString()"
        },
        "variables": {
          ".validate": "newData.hasChildren()"
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "auth != null && auth.subscription_level > 0",
        ".write": "auth != null && auth.subscription_level > 0"
      }
    }
  }
}
