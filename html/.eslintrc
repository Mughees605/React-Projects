{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "__": true,
    "__DEV__": false,
    "__PROD__": false,
    "__DEBUG__": false,
    "__COVERAGE__": false,
    "__BASENAME__": false
  },
  "rules": {
    "operator-linebreak": [2, "before"],
    "no-console": 1,
    "no-debugger": 2,
    "semi": [
      2,
      "never"
    ],
    "max-len": [
      2,
      120,
      2,
      {
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 0,
    "react/jsx-space-before-closing": [2, "never"],
    "react/self-closing-comp": 0,
    "react/jsx-first-prop-new-line": [
      2,
      "multiline-multiprop"
    ],
    "spaced-comment": 0,
    "no-alert": 2,
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "jsx-quotes": [
      2,
      "prefer-single"
    ]
  }
}
